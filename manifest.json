{

	"manifest_version": 2,
	"name": "Crayon: custom CSS injector",
	"version": "2.0.1",

	"browser_specific_settings": {
		"gecko": {
			"data_collection_permissions": { "required": ["none"] },
			"id": "@crayon-css-injector",
			"strict_min_version": "74.0"
		}
	},

	"description": "Write CSS rules for any website",

	"icons": {
		"48": "icons/crayon_48.png",
		"96": "icons/crayon_96.png"
	},
	
	"permissions": ["storage", "<all_urls>", "contextMenus", "notifications"],
	
	"browser_action": {
		"browser_style": true,
		"default_popup": "popup/popup.html",
		"default_icon": {
			"48": "icons/crayon_48.png",
			"96": "icons/crayon_96.png"
		}
	},	
	
	"content_scripts": [
	{
		"matches": ["<all_urls>"],
		"js": ["customcss.js"],
		"run_at": "document_start",
		"all_frames": true,
		"match_about_blank": true
	}
	]

}
